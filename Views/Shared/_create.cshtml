<form class="form-horizontal" name="policy">
    <fieldset>

        <!-- Form Name -->
        <legend>Create New</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="pn"></label>
            <div class="col-md-4">
                <input ng-model="p.PolicyNmber" id="pn" name="pn" type="number" placeholder="Policy Number" class="form-control input-md" required>

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for=""></label>
            <div class="col-md-4">
                <input ng-model="p.ClientName" id="" name="" type="text" placeholder="Name" class="form-control input-md" required>

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="surname"></label>
            <div class="col-md-4">
                <input ng-model="p.ClientSurname" id="surname" name="surname" type="text" placeholder="Surname" class="form-control input-md" required>

            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="save"></label>
            <div class="col-md-4">
                <button ng-click="Save(p)"
                        id="save"
                        ng-disabled="policy.pn.$invalid || policy.name.$invalid || policy.surname.$invalid"
                        name="save"
                        class="btn btn-primary">
                    Save
                </button>
            </div>
        </div>

    </fieldset>
</form>
<a class="btn btn-info" ui-sref="main"> Main</a>